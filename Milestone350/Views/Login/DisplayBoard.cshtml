@model IEnumerable<Milestone350.Models.CellModel>
<style>
    .game-button {
        width: 85px;
    }

    .game-button-image {
        width: 85px;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;

    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-label {
        font-size: 8px;
        text-align: center;

    
    }
</style>

@{
    string[] imageNames = { "unclickedBox.jpg", "minesweeperBomb.png" };
}
<form>
    <div class="button-zone">

        @for(int i =0; i<Model.Count(); i++)
        {
            //start a new line for every five
            //THIS WILL BE CHANGED WHEN READING IN THE BOARD SIZE
            if(i%5 == 0)
            {
                <div class="line-break"></div>
            }
            <button class="game-button" type="submit" value="@Model.ElementAt(i).Id" name="cellNumber" asp-controller ="Login" asp-action="HandleButtonClick">


                    <img class="game-button" src ="~/images/@imageNames[Model.ElementAt(i).CellState]"/>
                    <!---<div class="button-label">
                    @Model.ElementAt(i).Id
                        ,
                    @Model.ElementAt(i).CellState
                    </div>-->
                </button>
        }
    </div>
</form>
