@model Milestone350.Models.Board
<style>
    .game-button {
        width: 100px;
        height: 100px;
    }

    .game-button-image {
       width: 90px;
       height: 90px;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-label {
        font-size: 8px;
        text-align: center;
    }
    button{
        height: 50px;
        width: 50px
    }
</style>

@{
    string[] imageNames = { "unclickedBox.jpg", "minesweeperBomb.png", "minesweeperFlag.png"};
    
}
<form>
    <div class="button-zone">

        @for(int i =0; i < (Math.Sqrt(Model.Grid.Length)); i++)
        {
            for(int j = 0; j < (Math.Sqrt(Model.Grid.Length)); j++)
            {

                  
            <button class="game-button" type="submit" value="@Model.Grid[i,j].Row, @Model.Grid[i,j].Col" name="Cordinates" asp-controller ="Login" >

                   @if(@Model.Grid[i,i].IsFlagged)
                   {
                       <img class="game-button" src ="~/images/@imageNames[2]"/>
                   }
                  
                    @if(!@Model.Grid[i,i].IsVisited && !Model.Grid[i,j].IsLive)
      
                    {@Model.Grid[i,i].LiveNeighbors         }

                    @if (@Model.Grid[i, j].IsLive)
                    {
                        <img class="game-button" src ="~/images/@imageNames[1]"/>
                    }
                    
           </button>
                 
                             
            }
            //start a new line for 
             <div class="line-break"></div>
         
            
            
          
        }
    </div>
</form>
